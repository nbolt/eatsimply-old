#admin-content ng:controller='recipe_manage'
  .input.import
    input type='text' placeholder='Enter yummly URL' ng:model='yummly_url'
    .button ng:click='import()' Import
  .input.search
    input type='text' placeholder='Enter your search terms here' ng:model='search'
  .filters
    .filter.review ng:click='review()'
      .text Needs review
    .filter.hidden ng:click='hidden()'
      .text Hidden
    .filter.yummly ng:click='yummly()'
      .text Yummly
    .filter.course ng:click='courses()'
      .text All courses
    .filter.diet ng:click='diets()'
      .text All diets
  .nav
    .arrow.right ng:click='next()'
      .typcn.typcn-arrow-right
    .arrow.left ng:click='prev()'
      .typcn.typcn-arrow-left
  .recipes
    .recipe id="recipe-{{recipe.id}}" ng:repeat='recipe in recipes'
      .right
        .item.diet ng:if='recipe.diets[0]'
          .text ng:bind='recipe.diet'
        .item.course ng:if='recipe.courses[0]'
          .text ng:bind='recipe.courses[0].name'
        .item.count
          .text ng:bind='recipe.algo_count'
        .item.public
          .typcn ng:click='toggle(recipe)' ng:class='public(recipe.public)'
        .item.remove ng:click="destroy(recipe.id)"
          .typcn
      .name
        a href="/recipe/{{recipe.id}}/view" target='_window' ng:bind='recipe.name'
  .nav
    .arrow.right ng:click='next()'
      .typcn.typcn-arrow-right
    .arrow.left ng:click='prev()'
      .typcn.typcn-arrow-left