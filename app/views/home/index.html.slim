#meal-form ng:controller='meal'
  .mask
  .content
    .title Get your free meal plan in seconds
    .form
      .natural
        .row
          .text I'm a
          .input
            input id='gender' type='hidden' ui-select2='genderHash()' ng:model='form.gender'
          .text weighing
          .input
            input id='weight' type='text' ng:model='form.weight' style='width:40px'
          .text kgs and
        .row
          .text and am
          .input
            input id='height' type='text' ng:model='form.height' style='width:60px'
          .text#aan cm tall. I'm a
          .input
            input id='diet' type='hidden' ui-select2='dietHash()' ng:model='form.diet'
        .row
          .text and am aiming to
          .input
            input id='weight-goal' type='hidden' ui-select2='goalHash()' ng:model='form.weight_goal'
          .text weight.
        .row
          .text I'm
          .input
            input id='activity-level' type='hidden' ui-select2='activityHash()' ng:model='form.activity_level'
          .text and am
          .input
            input id='age' type='text' ng:model='form.age' style='width:40px'
          .text years old.
      .classic
        .row
          .field.long
            .label Cuisines I like
            .input
              input type='hidden' ui-select2='multiHash("cuisines")' ng:model='form.cuisines'
        .row
          .field.long
            .label Ingredients to avoid
            .input
              input type='hidden' ui-select2='multiHash("ingredients")' ng:model='form.avoid'
      .div
      .button ng:click='openMealPlan()'
        .icon
          .typcn.typcn-flash
        .text Get my customized meal plan now!

#meal-plan ng:controller='plan'
  .title
    .left
      .icon
        .typcn.typcn-tick
      .text Your customized meal plan
    .right
      .action.fine-tune ng:click='toMealForm()'
        .typcn.typcn-cog-outline
        .text Fine tune
      .action.pdf ng:click='emailGroceries()'
        .icon
          .typcn.typcn-mail
        .text Email my grocery list
  #meals-container
    #recipe-details
      .close
        .typcn.typcn-times
      .title
        .photo
          img ng:src='{{recipe.photo}}'
        .text ng:bind='recipe.name'
        .ingredients
          span.ingredient ng:repeat='ingredient in recipe.ingredients' ng:bind='ingredient.name'
        .instructions ng:bind='recipe.instructions'
        .source
          a href='{{recipe.source}}' target='_window' ng:bind='recipe.source'
    .arrows
      .arrow.prev arrow-prev=''
        .typcn.typcn-chevron-left
      .arrow.next arrow-next=''
        .typcn.typcn-chevron-right
    #meals
      .day id='{{day.name}}' ng:repeat='day in days'
        .title ng:bind='day.name'
        .meal ng:repeat='meal in day.meals'
          .top
            .right
              .action ng:click='shuffle(day,$index)'
                .icon
                  img src='/images/shuffle.png'
                .text Switch
              .action
                .dropdown
                  .content
                    .menu
                      .item.restaurant ng:click="openEntry('restaurant', day, $index)"
                        .text Local Restaurant
                        .typcn.typcn-chevron-right
                      .item.yummly ng:click="openEntry('yummly', day, $index)"
                        .text Yummly
                        .typcn.typcn-chevron-right
                    .entry
                      .entry-content.restaurant
                        .input
                          input type='hidden' placeholder='Search restaurants' ui-select2='restaurantHash()' ng:model='restaurant' 
                        .submit ng:click='restaurantSubmit(day, $index)' Submit
                      .entry-content.yummly
                        .input
                          input type='text' placeholder='Enter your yummly url'
                        .submit ng:click='yummlySubmit(day, $index)' Submit
                .icon.circle
                .text ng:click='openSource(day, $index)' Source
            .left
              .title Meal {{$index+1}}
          .recipes
            #spinner ng:if='!meal.recipes[0] && !meal.message'
            .message ng:if='meal.message' ng:bind='meal.message'
            .recipe ng:repeat='recipe in meal.recipes'
              .photo style='background-image:url({{recipe.recipe_images[0].image.url}})'
              .info
                a hrefs='{{recipe.source}}' target='_window' ng:click='openRecipe(recipe)'
                  .title ng:bind='recipe.name'

javascript:
  $(window).scroll(function(){
    t = $(window).scrollTop()
    $('#bg .inner-container').css('top', t/4).css('bottom', -(t/4))
  })