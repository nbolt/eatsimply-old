#meal-form ng:controller='meal'
  .mask
  .content
    .title Get your free meal plan in seconds
    .form
      .natural
        .row
          .text I'm a
          .input
            input type='hidden' ui-select2='naturalHash("gender")' ng:model='form.gender'
          .text weighing
          .input
            input type='text' ng:model='form.weight' style='width:60px'
          .text lbs
        .row
          .text and
          .input
            input type='text' ng:model='form.height' style='width:60px'
          .text#aan cm tall. I'm a
          .input
            input type='hidden' ui-select2='naturalHash("diet")' ng:model='form.diet'
        .row
          .text and am aiming to
          .input
            input type='hidden' ui-select2='naturalHash("weight_goal")' ng:model='form.weight_goal'
          .text weight.
      .classic
        .row
          .field.long
            .label Cuisines I like
            .input
              input type='hidden' ui-select2='multiHash("cuisines")' ng:model='form.cuisines'
        .row
          .field.long
            .label Ingredients to avoid
            .input
              input type='hidden' ui-select2='multiHash("ingredients")' ng:model='form.avoid'
      .div
      .button ng:click='openMealPlan()'
        .icon
          .typcn.typcn-flash
        .text Get my customized meal plan now!

#meal-plan ng:controller='plan'
  .title
    .left
      .icon
        .typcn.typcn-tick
      .text Your customized meal plan
    /.right
    /  .pdf
    /    .icon
    /      img src='/images/pdf.png' height='22'
    /    .text Download the PDF
  #meals-container
    .arrows
      .arrow.prev arrow-prev=''
        .typcn.typcn-chevron-left
      .arrow.next arrow-next=''
        .typcn.typcn-chevron-right
    #meals
      .day id='{{day.name}}' ng:repeat='day in days'
        .title ng:bind='day.name'
        .meal ng:repeat='meal in day.meals'
          .top
            .right
              .action ng:click='shuffle(day,$index)'
                .icon
                  img src='/images/shuffle.png'
                .text Shuffle
            .left
              .title Meal {{$index+1}}
          .recipes
            .recipe ng:repeat='recipe in meal.recipes'
              .photo style='background-image:url({{recipe.photo}})'
              .info
                a href='{{recipe.source}}' target='_window'
                  .title ng:bind='recipe.name'

javascript:
  $(window).scroll(function(){
    t = $(window).scrollTop()
    $('#bg .inner-container').css('top', t/4).css('bottom', -(t/4))
  })